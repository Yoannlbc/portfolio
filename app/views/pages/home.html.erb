  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="carousel">
      <div class="carousel-images"></div>
      <button class="carousel-prev">&#10094;</button>
      <button class="carousel-next">&#10095;</button>
    </div>
  </div>
</div>
